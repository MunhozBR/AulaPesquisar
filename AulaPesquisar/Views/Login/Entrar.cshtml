<form style="margin-top: 20%;">
    <div style="border: 4mm ridge rgba(0,31,226,0.73); ">
        <!-- Email input -->
        <h2>Área de Login</h2>
        <br>
        <div class="form-outline mb-4">
            <input type="email" id="form2Example1" class="form-control" />
            <label class="form-label" for="form2Example1">E-mail</label>
        </div>

        <!-- Password input -->
        <div class="form-outline mb-4">
            <input type="password" id="form2Example2" class="form-control" />
            <label class="form-label" for="form2Example2">Senha</label>
        </div>

        <!-- 2 column grid layout for inline styling -->
        <div class="row mb-4">
            <div class="col d-flex justify-content-center">
                <!-- Checkbox -->
                <div class="form-check">
                    <input class="form-check-input"
                           type="checkbox"
                           value=""
                           id="form2Example31"
                           checked />
                    <label class="form-check-label" for="form2Example31"> Lembrar</label>
                </div>
            </div>

            <div class="col">
                <!-- Simple link -->
                <a href="#!">Esqueci a Senha?</a>
            </div>
        </div>

        <!-- Submit button -->
        <button type="button" class="btn btn-primary btn-block mb-4">Logar</button>

        <!-- Register buttons -->
        <div class="text-center">
            <p>Não é um membro? <a href="#!">Registre-se</a></p>

        </div>
    </div>
</form>

